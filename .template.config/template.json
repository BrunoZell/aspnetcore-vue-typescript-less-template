{
  "$schema": "http://json.schemastore.org/template",
  "author": "Bruno Zell",
  "classifications": [
    "Web",
    "MVC",
    "SPA"
  ],
  "name": "ASP.Net Core with Vue.js, TypeScript and Less",
  "identity": "MyProject.05.Sample.CSharp",
  "shortName": "vue-ts",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "VueTemplate",
  "preferNameDirectory": true,
  "symbols": {
    "description": {
      "type": "parameter",
      "defaultValue": "A vuetiful project",
      "replaces": "project-description"
    },
    "author": {
      "type": "parameter",
      "isRequired": true,
      "replaces": "project-author"
    },
    "certbotEmail": {
      "type": "parameter",
      "isRequired": true,
      "replaces": "certbot@example.com"
    },
    "publicUrl": {
      "type": "parameter",
      "isRequired": true,
      "replaces": "public.url"
    },
    "currentYear": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyy"
      },
      "replaces": "current-year"
    }
  },
  "sources": [
    {
      "exclude": [
        ".template.config/**/*", 
        ".git/**",
        ".vs/**",
        "**/[Bb]in/**",
        "**/[Oo]bj/**", 
        "**/*.filelist", 
        "**/node_modules/**",
        "**/wwwroot/**",
        "**/*.user", 
        "**/*.lock.json",
        "README.md"
      ],
      "rename": {
        "Project-README.md": "README.md"
      }
    }
  ]
}