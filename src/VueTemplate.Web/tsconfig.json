{
  "compilerOptions": {
    "baseUrl": "./ClientApp", // Resolve modules relative to client app root
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": true, // Remove compiler errors about experimental decorators
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": true
  },
  "include": [
    "./ClientApp/**/*"
  ]
}
